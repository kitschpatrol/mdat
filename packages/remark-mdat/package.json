{
	"name": "remark-mdat",
	"version": "0.0.0",
	"type": "module",
	"description": "A remark plugin for the Markdown Autophagic Templating system, which fills placeholder HTML comments in Markdown files with dynamic content. This plugin powers mdat and mdat-readme.",
	"repository": {
		"type": "git",
		"url": "git@github.com:kitschpatrol/mdat.git",
		"directory": "packages/remark-mdat"
	},
	"bugs": {
		"url": "https://github.com/kitschpatrol/mdat/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "pnpm run clean && tsc -p tsconfig.types.json && tsx ./scripts/build.ts",
		"clean": "rm -rf ./dist",
		"dev": "pnpm run test",
		"prepublishOnly": "pnpm run build",
		"test": "vitest"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"jsdom": "^24.0.0",
		"json5": "^2.2.3",
		"plur": "^5.1.0",
		"remark": "^15.0.1",
		"remark-gfm": "^4.0.0",
		"table": "^6.8.1",
		"unist-util-visit": "^5.0.0",
		"vfile-message": "^4.0.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/jsdom": "^21.1.6",
		"@types/mdast": "^4.0.3",
		"@types/node": "^20.11.8",
		"esbuild": "^0.20.0",
		"tsx": "^4.7.0",
		"type-fest": "^4.10.1",
		"unified": "^11.0.4",
		"vfile": "^6.0.1",
		"vitest": "^1.2.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
