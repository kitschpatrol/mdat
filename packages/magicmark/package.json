{
	"name": "magicmark",
	"version": "0.0.0",
	"type": "module",
	"description": "CLI tool and library for using comments as templates in markdown files.",
	"repository": {
		"type": "git",
		"url": "git@github.com:kitschpatrol/magicmark.git",
		"directory": "packages/magicmark"
	},
	"bugs": {
		"url": "https://github.com/kitschpatrol/magicmark/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"bin": {
		"magicmark": "bin/cli.js"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"bin/*",
		"dist/*"
	],
	"scripts": {
		"build": "pnpm run build:lib && pnpm run build:cli",
		"build:cli": "pnpm run clean:cli && tsx ./scripts/build-cli.ts",
		"build:lib": "pnpm run clean:lib && tsc -p tsconfig.types.json && tsx ./scripts/build-lib.ts",
		"clean": "pnpm run clean:lib && pnpm run clean:cli",
		"clean:cli": "rm -rf ./bin",
		"clean:lib": "rm -rf ./dist",
		"dev": "pnpm run build && vitest --watch false",
		"dev:watch": "nodemon --watch src --watch test --ext ts --exec pnpm run dev",
		"preinstall": "pnpm run build",
		"test": "vitest"
	},
	"dependencies": {
		"chalk": "^5.3.0",
		"json5": "^2.2.3",
		"log-symbols": "^6.0.0",
		"path-type": "^5.0.0",
		"plur": "^5.1.0",
		"remark": "^15.0.1",
		"remark-gfm": "^4.0.0",
		"remark-parse": "^11.0.0",
		"unist-util-visit": "^5.0.0",
		"untildify": "^5.0.0",
		"yargs": "^17.7.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@types/mdast": "^4.0.3",
		"@types/node": "^20.11.8",
		"@types/unist": "^3.0.2",
		"@types/yargs": "^17.0.32",
		"esbuild": "^0.20.0",
		"execa": "^8.0.1",
		"nodemon": "^3.0.3",
		"tsx": "^4.7.0",
		"type-fest": "^4.10.1",
		"typescript": "^5.3.3",
		"vitest": "^1.2.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
